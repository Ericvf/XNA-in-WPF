<Window x:Class="WpfApplication1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:s="clr-namespace:WpfApplication1.GameComponents"
        Title="MainWindow" Height="1080" Width="1920" Background="Black">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <!--<s:XNAControlBase x:Name="c" Margin="100"  />-->


        <s:Coverflow Grid.Row="0" />
        <s:Triangle Grid.Row="1" />

        <Button Width="200" Height="200" Grid.Row="0" VerticalAlignment="Top" HorizontalAlignment="Right" Opacity="0.3"  Margin="10"/>
        <Button Width="200" Height="200" Grid.Row="1" VerticalAlignment="Bottom" HorizontalAlignment="Right" Opacity="0.3"  Margin="10"/>
    </Grid>
</Window>
